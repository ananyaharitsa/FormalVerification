{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build CPU Simulator",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",             // include debug symbols
        "-O0",            // disable optimizations for proper stepping
        "-std=c++17",
        "CPU_Files/cpusim.cpp",
        "CPU_Files/CPU.cpp",
        "-I",
        "CPU_Files",
        "-o",
        "cpusim.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
